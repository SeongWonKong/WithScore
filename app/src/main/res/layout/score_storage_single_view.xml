<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@color/default_background">

    <com.withscore.seongwonkong.withscore.util.TopCropImageView
        android:id="@+id/thumbnail_image_view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/advertisement_area_666"
        />

    <LinearLayout
        android:id="@+id/title_wrap"
        android:layout_below="@id/thumbnail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginRight="11dp"
            android:textColor="@color/default_text"
            android:text="@string/score_title"/>

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/default_text"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/created_date_time_wrap"
        android:layout_below="@id/title_wrap"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginRight="11dp"
            android:textColor="@color/default_text"
            android:text="@string/score_created_date_time"/>

        <TextView
            android:id="@+id/created_datetime_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/default_text"
            />
    </LinearLayout>
</RelativeLayout>